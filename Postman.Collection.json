{
  "info": {
    "name": "Week4_RideHailingAPI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Ali Driver\",\n    \"email\": \"ali@driver.com\",\n    \"role\": \"driver\",\n    \"availability\": true\n}"
        },
        "url": {
          "raw": "http://localhost:3000/users",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "users"
          ]
        }
      }
    },
    {
      "name": "Block User (Admin)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/admin/block-user/:id",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "admin",
            "block-user",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Update Availability (Driver)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"availability\": false\n}"
        },
        "url": {
          "raw": "http://localhost:3000/users/:id/availability",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "users",
            ":id",
            "availability"
          ]
        }
      }
    },
    {
      "name": "View Earnings (Driver)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/users/:id/earnings",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "users",
            ":id",
            "earnings"
          ]
        }
      }
    },
    {
      "name": "View Analytics (Admin)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/admin/analytics",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "admin",
            "analytics"
          ]
        }
      }
    }
  ]
}